@{
    ViewBag.Title = "Learn Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>用户注册</h3>
<div ng-app="myApp2">
    @*<form name="registerForm">*@
        <table class="rui-table" ng-controller="register">
            <tbody>
                <tr>
                    <th>用户名</th>
                    <td>
                        <input ng-model="Name" type="text" required />
                    </td>
                </tr>
                <tr>
                    <th>真实姓名</th>
                    <td>
                        <input type="text" ng-model="UserName" />
                    </td>
                </tr>
                <tr>
                    <th>密码</th>
                    <td>
                        <input type="text" ng-model="Password" required ng-minlength="6" />
                    </td>
                </tr>
                <tr>
                    <th>确认密码</th>
                    <td>
                        <input type="text" ng-model="ComfirmPassword" required ng-minlength="6" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-center">
                        <a ng-click="submit()" class="btn btn-default">提交</a>
                    </td>
                </tr>
                <tr>
                     <td colspan="2" class="text-center">
                        
                      <input type="text" ng-model="postData" />
                     </td>
                </tr>
            </tbody>
        </table>
@*    </form>*@

</div>
<script src="../../Scripts/app/homeController.js" type="text/javascript"></script>
